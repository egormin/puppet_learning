node default{
  case $osfamily {
    'Ubuntu', 'Debian': {
      notify { 'Deb system': }
     }
    'RedHat', 'CentOS': {
      notify { "\nThis is Centos, and the OS Family is: $osfamily": }   
    }
  }
}

